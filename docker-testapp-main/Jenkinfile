pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/almunna/Docker-Jenkins.git', branch: 'master'
            }
        }

        stage('Install Dependencies') {
            steps {
                dir('docker-testapp-main') {
                    sh 'docker-compose run --rm nodeapp npm install'
                }
            }
        }

        stage('Build App') {
            steps {
                dir('docker-testapp-main') {
                    sh 'docker-compose build'
                }
            }
        }

        stage('Run Tests') {
            steps {
                dir('docker-testapp-main') {
                    sh 'docker-compose run --rm nodeapp npm test'
                }
            }
        }

        stage('Deploy') {
            steps {
                dir('docker-testapp-main') {
                    sh 'docker-compose up -d'
                }
            }
        }
    }

    post {
        always {
            echo 'Pipeline completed.'
        }
        failure {
            echo 'Pipeline failed.'
        }
    }
}
